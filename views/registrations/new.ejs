<div class="container">
  <form method="POST" action="/register">
    <div class="field secondary-font is-size-6">
      <label for="username">Nickname</label>
      <input class="input secondary-font is-size-6" type="text" name="username" id="name" placeholder="Nickname">
    </div>
    <div class="field">
      <label for="userimage" class=" secondary-font is-size-6">Profile Picture</label>
      <input class="input secondary-font is-size-6" name="userimage" type="text" placeholder="Image" required required pattern="^http">
    </div>
    <div class="field secondary-font is-size-6">
      <label for="email">Email</label>
      <input class="input secondary-font is-size-6" type="text" name="email" id="email">
    </div>
    <div class="field secondary-font is-size-6">
      <label for="password">Password</label>
      <input class="input secondary-font is-size-6" type="password" name="password" id="password">
    </div>
    <div class="field secondary-font is-size-6">
      <label for="passwordConfirmation">Password Confirmation</label>
      <input class="input secondary-font is-size-6" type="password" name="passwordConfirmation" id="passwordConfirmation">
    </div>
    <button class="tagmate-button is-success secondary-font is-size-6">Register</button>
  </form>
  </div>
